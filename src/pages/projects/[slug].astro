---
import { getCollection, render } from "astro:content";
import type { GetStaticPaths, InferGetStaticPropsType } from "astro";
import PageLayout from "@/layouts/Base.astro";

export const getStaticPaths = (async () => {
  const projects = await getCollection("projects");
  return projects.map((project) => ({
    params: { slug: project.id },
    props: { project },
  }));
}) satisfies GetStaticPaths;

type Props = InferGetStaticPropsType<typeof getStaticPaths>;

const { project } = Astro.props;
const { title, summary, thumbnail, images, pdf, github } = project.data;
const { Content } = await render(project);
---

<PageLayout meta={{ title }}>
  <section class="prose max-w-none">
    <h1 class="title">{title}</h1>

    {summary && <p class="text-accent-2">{summary}</p>}

    {thumbnail && (
      <img
        src={thumbnail}
        alt={title}
        class="w-full max-w-2xl my-6 rounded"
      />
    )}

    {images && images.length > 0 && (
      <div class="my-6 space-y-4">
        {images.map((img, i) => (
          <img
            src={img}
            alt={`${title} figure ${i + 1}`}
            class="w-full max-w-2xl rounded"
          />
        ))}
      </div>
    )}

    <div class="flex gap-4">
      {pdf && (
        <a
          href={pdf}
          target="_blank"
          class="underline text-link text-lg"
        >
          ðŸ“„ View PDF
        </a>
      )}
      {github && (
        <a
          href={github}
          target="_blank"
          class="underline text-link text-lg"
        >
          ðŸ’» GitHub
        </a>
      )}
    </div>

    <div class="mt-8">
      <Content />
    </div>
  </section>
</PageLayout>
